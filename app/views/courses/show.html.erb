<div class="container">

  <h1><%= @course.title %></h1>

  <ul>
    <% @course.sections.each do |section| %>
      <li><%= section.title %></li>
      <ul>
        <% section.lessons.each do |lesson| %>
          <li><%= link_to lesson.name, section_lesson_path(section, lesson) %></li>
        <% end %>
      </ul>
    <% end %>
  </ul>
</div>
